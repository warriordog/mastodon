{
  "compilerOptions": {
    "declaration": false,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "lib": ["DOM", "DOM.Iterable", "ESNext"],
    "module": "ES2022",
    "moduleResolution": "node",
    "sourceMap": true,
    "target": "ES2022",
    "jsx": "react",
    "noEmit": true,
    "allowJs": true,
    "baseUrl": "./app/javascript",
    "resolveJsonModule": true,
    "strict": false,
    "incremental": true
  },
  "exclude": [
    "**/*.spec.ts",
    "**/build/*",
    "**/node_modules/*",
    "**/public/*",
    "**/vendor/*"
  ],
  "compileOnSave": false
}
